@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
	:root {
		--background: 296 18% 95%;
		--foreground: 296 5% 10%;
		--card: 296 18% 90%;
		--card-foreground: 296 5% 15%;
		--popover: 296 18% 95%;
		--popover-foreground: 296 95% 10%;
		--primary: 296 78% 53%;
		--primary-foreground: 0 0% 100%;
		--secondary: 296 18% 83%;
		--secondary-foreground: 0 0% 0%;
		--muted: 258 18% 85%;
		--muted-foreground: 296 5% 40%;
		--accent: 258 18% 83%;
		--accent-foreground: 296 5% 15%;
		--destructive: 0 50% 50%;
		--destructive-foreground: 296 5% 90%;
		--border: 296 20% 82%;
		--input: 296 20% 50%;
		--ring: 296 78% 53%;
		--radius: 0.5rem;
	}
	.dark {
		--background: 296 18% 10%;
		--foreground: 296 5% 90%;
		--card: 296 18% 10%;
		--card-foreground: 296 5% 90%;
		--popover: 296 18% 5%;
		--popover-foreground: 296 5% 90%;
		--primary: 296 78% 53%;
		--primary-foreground: 0 0% 100%;
		--secondary: 296 18% 20%;
		--secondary-foreground: 0 0% 100%;
		--muted: 258 18% 25%;
		--muted-foreground: 296 5% 65%;
		--accent: 258 18% 25%;
		--accent-foreground: 296 5% 90%;
		--destructive: 0 50% 50%;
		--destructive-foreground: 296 5% 90%;
		--border: 296 20% 50%;
		--input: 296 20% 50%;
		--ring: 296 78% 53%;
		--radius: 0.5rem;
	}
}

@layer base {
	* {
		@apply border-border;
	}
	body {
		@apply bg-background text-foreground;
	}
}
